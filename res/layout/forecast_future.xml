<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip">

        <ImageView
            android:id="@+id/forecast_icon"
            android:layout_width="match_parent"
            android:layout_height="96dip"
            android:src="@drawable/ic_launcher"/>

        <TextView
            android:id="@+id/forecast_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/forecast_tempavg"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/forecast_tempavg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/forecast_rainavg"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/forecast_rainavg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/forecast_icon"/>

        <TextView
            android:id="@+id/forecast_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="42sp"
            android:layout_alignRight="@id/forecast_day"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/forecast_icon"/>

    </RelativeLayout>
</LinearLayout>